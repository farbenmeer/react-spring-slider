root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
indent_style = space

[.github/**/*]
indent_style = space

[*{.yml,.json}]
indent_style = space

[tsconfig.json]
indent_style = tab

[.ecrc]
indent_style = space

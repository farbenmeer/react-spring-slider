{
	"compilerOptions": {
			"outDir": "./dist/",
			"strictNullChecks": true,
			"moduleResolution": "node",
			"module": "es6",
			"jsx": "react",
			"target": "es5",
			"allowJs": true,
            "declaration": true,
			"allowSyntheticDefaultImports": true,
			"esModuleInterop": true,
			"noImplicitAny": true,
            "types": ["react"]
	},
	"include": [
            "src/**/*"
	],
	"exclude": ["dist", "node_modules"]
}

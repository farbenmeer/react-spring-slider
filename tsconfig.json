{
	"compilerOptions": {
		"outDir": "./dist/",
		"strictNullChecks": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"jsx": "react",
		"target": "ES6",
		"allowJs": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"types": ["react"]
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
